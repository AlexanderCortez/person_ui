{
  "extends": ["airbnb-typescript", "react-app", "react-app/jest", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": ["eslint-plugin-prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "jsxBracketSameLine": true,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true
      }
    ]
  }
}
